page{
  background: #f3f7f7;
}
.select_box{
  background: #fff;
  width: 35%;
  margin-left: 25rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  position: relative;
}
.aa{
  margin-top: 50rpx;
  margin-left: 50rpx;
}
.xx{
  width: 100%;
  height: 450px;
  background-color: white;
   display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}